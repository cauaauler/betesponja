@{
    ViewData["Title"] = "Bem-vindos à Fenda do Biquíni!";
    var liveMatches = ViewBag.LiveMatches as IEnumerable<FutebolSimplesBetsHub.Models.ViewModels.MatchViewModel>;
    var upcomingMatches = ViewBag.UpcomingMatches as IEnumerable<FutebolSimplesBetsHub.Models.ViewModels.MatchViewModel>;
}

<div class="min-h-screen bg-gradient-to-b from-cyan-100 to-blue-200 pt-16">
    <!-- Hero Banner -->
    <div class="bg-white py-16 relative overflow-hidden border-b-4 border-yellow-400">
        <div class="container mx-auto px-4 text-center relative z-10">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-yellow-400">
                Bem-vindos à Fenda do Biquíni!
            </h1>
            <p class="text-xl mb-8 text-blue-900">
                As melhores apostas submarinas com os personagens mais queridos!
            </p>
            <div class="flex justify-center space-x-8 text-center">
                <div class="bg-yellow-200 p-4 rounded-lg">
                    <div class="text-2xl font-bold text-yellow-500">50+</div>
                    <div class="text-sm text-gray-700">Competições por mês</div>
                </div>
                <div class="bg-pink-200 p-4 rounded-lg">
                    <div class="text-2xl font-bold text-yellow-500">98%</div>
                    <div class="text-sm text-gray-700">Pagamentos rápidos</div>
                </div>
                <div class="bg-yellow-200 p-4 rounded-lg">
                    <div class="text-2xl font-bold text-yellow-500">24/7</div>
                    <div class="text-sm text-gray-700">Suporte online</div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8">
        <!-- Live Matches Section -->
        <section class="mb-12">
            <div class="flex items-center mb-6">
                <div class="w-3 h-3 bg-pink-400 rounded-full mr-3 animate-pulse"></div>
                <h2 class="text-2xl font-bold text-blue-900">Competições ao Vivo</h2>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (liveMatches != null && liveMatches.Any())
                {
                    foreach (var match in liveMatches)
                    {
                        <partial name="_MatchCard" model="match" />
                    }
                }
                else
                {
                    <div class="col-span-3 text-center text-gray-500">Nenhuma competição ao vivo no momento.</div>
                }
            </div>
        </section>

        <!-- Upcoming Matches Section -->
        <section>
            <div class="flex items-center mb-6">
                <span class="mr-3 text-blue-900">&#128337;</span>
                <h2 class="text-2xl font-bold text-blue-900">Próximas Competições</h2>
                <span class="ml-2 text-yellow-400">&#11088;</span>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (upcomingMatches != null && upcomingMatches.Any())
                {
                    foreach (var match in upcomingMatches)
                    {
                        <partial name="_MatchCard" model="match" />
                    }
                }
                else
                {
                    <div class="col-span-3 text-center text-gray-500">Nenhuma competição futura encontrada.</div>
                }
            </div>
        </section>

        <!-- Quick Stats -->
        <section class="mt-12 bg-white rounded-lg p-8 shadow-md border-4 border-yellow-400">
            <h3 class="text-xl font-bold mb-6 text-center text-blue-900">Estatísticas da Fenda do Biquíni</h3>
            <div class="grid md:grid-cols-4 gap-6 text-center">
                <div>
                    <div class="text-3xl font-bold text-blue-900">8</div>
                    <div class="text-gray-600">Competições hoje</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-green-600">425</div>
                    <div class="text-gray-600">Apostas ativas</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-pink-400">R$ 15.8k</div>
                    <div class="text-gray-600">Total em apostas</div>
                </div>
                <div>
                    <div class="text-3xl font-bold text-yellow-800">4.2x</div>
                    <div class="text-gray-600">Maior odd do dia</div>
                </div>
            </div>
        </section>
    </div>
</div> 