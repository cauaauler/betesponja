@model FutebolSimplesBetsHub.Models.ViewModels.MatchViewModel

<div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400 hover:shadow-lg transition-shadow">
    <div class="flex items-center justify-between mb-4">
        <span class="text-sm text-gray-600 font-medium">@Model.Competition</span>
        @if (Model.IsLive)
        {
            <div class="flex items-center text-pink-400 text-sm font-medium">
                <div class="w-2 h-2 bg-pink-400 rounded-full mr-2 animate-pulse"></div>
                AO VIVO
            </div>
        }
    </div>
    <div class="text-center mb-4">
        <div class="flex items-center justify-between">
            <div class="text-center flex-1">
                <h3 class="font-semibold text-lg text-blue-900">@Model.Participant1</h3>
            </div>
            <div class="mx-4 text-gray-400">
                <span class="text-yellow-400 text-2xl">&#11088;</span>
            </div>
            <div class="text-center flex-1">
                <h3 class="font-semibold text-lg text-blue-900">@Model.Participant2</h3>
            </div>
        </div>
        <div class="flex items-center justify-center mt-2 text-gray-600">
            <span class="mr-1">&#128337;</span>
            <span class="text-sm">@Model.Date às @Model.Time</span>
        </div>
    </div>
    <div class="grid grid-cols-3 gap-2 mb-4">
        <button onclick="openBetModal(@Model.Id, 'participant1', @Model.OddsParticipant1)" 
                class="bg-gray-100 hover:bg-blue-900 hover:text-white p-3 rounded-lg text-center transition-colors group border-2 border-transparent hover:border-yellow-400">
            <div class="text-xs text-gray-600 group-hover:text-white/80">@Model.Participant1</div>
            <div class="font-bold">@Model.OddsParticipant1.ToString("F2")</div>
        </button>
        <button onclick="openBetModal(@Model.Id, 'draw', @Model.OddsDraw)" 
                class="bg-gray-100 hover:bg-pink-400 hover:text-white p-3 rounded-lg text-center transition-colors group border-2 border-transparent hover:border-yellow-400">
            <div class="text-xs text-gray-600 group-hover:text-white/80">Empate</div>
            <div class="font-bold">@Model.OddsDraw.ToString("F2")</div>
        </button>
        <button onclick="openBetModal(@Model.Id, 'participant2', @Model.OddsParticipant2)" 
                class="bg-gray-100 hover:bg-blue-900 hover:text-white p-3 rounded-lg text-center transition-colors group border-2 border-transparent hover:border-yellow-400">
            <div class="text-xs text-gray-600 group-hover:text-white/80">@Model.Participant2</div>
            <div class="font-bold">@Model.OddsParticipant2.ToString("F2")</div>
        </button>
    </div>
</div>
<!-- Modal de aposta -->
<div id="betModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="modal-content bg-white p-6 rounded-xl shadow-lg w-80 transform transition-all duration-200">
        <!-- Conteúdo será inserido pelo JavaScript -->
    </div>
</div>
<script>
function openBetModal(matchId, betType, odds) {
    const modal = document.getElementById('betModal');
    const modalContent = modal.querySelector('.modal-content');

    modalContent.innerHTML = `
        <h2 class="text-lg font-semibold mb-2">Aposta</h2>
        <p>Partida ID: ${matchId}</p>
        <p>Tipo de aposta: ${betType}</p>
        <p>Odds: ${odds}</p>
        <div class="mt-4 flex justify-between">
            <button class="bg-green-500 text-white px-4 py-2 rounded" onclick="confirmBet(${matchId}, '${betType}', ${odds})">Confirmar</button>
            <button class="bg-red-500 text-white px-4 py-2 rounded" onclick="closeBetModal()">Cancelar</button>
        </div>
    `;

    modal.classList.add('show');
    modal.style.display = 'flex';
}

function closeBetModal() {
    const modal = document.getElementById('betModal');
    modal.classList.remove('show');
    setTimeout(() => { modal.style.display = 'none'; }, 200); // espera a animação
}


function confirmBet(matchId, betType, odds) {
    alert(`Aposta confirmada: ${betType} com odds ${odds} na partida ${matchId}`);
    closeBetModal();
}

</script> 