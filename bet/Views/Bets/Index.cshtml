@{
    ViewData["Title"] = "Minhas Apostas";
    var bets = ViewBag.Bets as IEnumerable<FutebolSimplesBetsHub.Models.Bet>;
    var balance = ViewBag.Balance as decimal? ?? 0;
}

<div class="min-h-screen bg-gradient-to-b from-cyan-100 to-blue-200 pt-16">
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-blue-900">Minhas Apostas</h1>
            <div class="bg-white rounded-lg p-4 shadow-md border-2 border-yellow-400">
                <div class="text-sm text-gray-600">Saldo Atual</div>
                <div class="text-2xl font-bold text-green-600">R$ @balance.ToString("F2")</div>
            </div>
        </div>

        @if (bets != null && bets.Any())
        {
            <div class="grid gap-6">
                @foreach (var bet in bets)
                {
                    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="text-lg font-semibold text-blue-900">
                                    @bet.Match.Participant1 vs @bet.Match.Participant2
                                </h3>
                                <p class="text-gray-600">@bet.Match.Competition</p>
                                <p class="text-sm text-gray-500">
                                    @bet.Match.Date às @bet.Match.Time
                                </p>
                            </div>
                            <div class="text-right">
                                <span class="inline-block px-3 py-1 rounded-full text-sm font-medium
                                    @(bet.Status == "won" ? "bg-green-100 text-green-800" :
                                      bet.Status == "lost" ? "bg-red-100 text-red-800" :
                                      bet.Status == "cancelled" ? "bg-gray-100 text-gray-800" :
                                      "bg-yellow-100 text-yellow-800")">
                                    @(bet.Status == "won" ? "Ganhou" :
                                      bet.Status == "lost" ? "Perdeu" :
                                      bet.Status == "cancelled" ? "Cancelada" :
                                      "Pendente")
                                </span>
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-3 gap-4 mb-4">
                            <div class="text-center">
                                <div class="text-sm text-gray-600">Tipo de Aposta</div>
                                <div class="font-semibold text-blue-900">
                                    @(bet.BetType == "participant1" ? bet.Match.Participant1 :
                                      bet.BetType == "participant2" ? bet.Match.Participant2 :
                                      "Empate")
                                </div>
                            </div>
                            <div class="text-center">
                                <div class="text-sm text-gray-600">Valor Apostado</div>
                                <div class="font-semibold text-blue-900">R$ @bet.Amount.ToString("F2")</div>
                            </div>
                            <div class="text-center">
                                <div class="text-sm text-gray-600">Odd</div>
                                <div class="font-semibold text-blue-900">@bet.Odds.ToString("F2")</div>
                            </div>
                        </div>
                        
                        <div class="border-t pt-4">
                            <div class="flex justify-between items-center">
                                <div>
                                    <div class="text-sm text-gray-600">Ganho Potencial</div>
                                    <div class="text-lg font-bold text-green-600">R$ @bet.PotentialWin.ToString("F2")</div>
                                </div>
                                <div class="text-right">
                                    <div class="text-sm text-gray-600">Data da Aposta</div>
                                    <div class="text-sm text-gray-800">@bet.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-12 bg-white rounded-lg border-4 border-yellow-400">
                <div class="text-gray-400 text-lg mb-2">Nenhuma aposta encontrada</div>
                <p class="text-gray-600 mb-4">Você ainda não fez nenhuma aposta</p>
                <a href="/Matches" class="bg-blue-900 text-white px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors">
                    Ver Competições
                </a>
            </div>
        }
    </div>
</div> 