@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="min-h-screen bg-gradient-to-b from-cyan-100 to-blue-200 pt-16">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold text-blue-900 mb-8">Meu Perfil</h1>
            
            <div class="grid md:grid-cols-3 gap-8">
                <!-- Profile Info -->
                <div class="md:col-span-2">
                    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400">
                        <h2 class="text-xl font-semibold text-blue-900 mb-6">Informações Pessoais</h2>
                        
                        <form method="post" class="space-y-4">
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Nome completo</label>
                                    <input type="text" name="name" value="Usuário Demo" 
                                           class="w-full p-3 border-2 border-yellow-400 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-blue-900" />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Nome de usuário</label>
                                    <input type="text" name="username" value="demo" 
                                           class="w-full p-3 border-2 border-yellow-400 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-blue-900" />
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                <input type="email" name="email" value="demo@fendadobiquini.com" 
                                       class="w-full p-3 border-2 border-yellow-400 rounded-lg focus:ring-2 focus:ring-blue-900 focus:border-blue-900" />
                            </div>
                            
                            <div class="pt-4">
                                <button type="submit" class="bg-blue-900 text-white px-6 py-3 rounded-lg hover:bg-blue-800 transition-colors">
                                    Salvar Alterações
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Account Stats -->
                <div class="space-y-6">
                    <!-- Balance Card -->
                    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400">
                        <h3 class="text-lg font-semibold text-blue-900 mb-4">Saldo da Conta</h3>
                        <div class="text-3xl font-bold text-green-600 mb-2">R$ 1.000,00</div>
                        <p class="text-sm text-gray-600">Saldo disponível para apostas</p>
                        
                        <div class="mt-4 space-y-2">
                            <button class="w-full bg-green-600 text-white py-2 px-4 rounded-lg hover:bg-green-700 transition-colors">
                                Depositar
                            </button>
                            <button class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
                                Sacar
                            </button>
                        </div>
                    </div>
                    
                    <!-- Stats Card -->
                    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400">
                        <h3 class="text-lg font-semibold text-blue-900 mb-4">Estatísticas</h3>
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Total de apostas:</span>
                                <span class="font-semibold">15</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Apostas ganhas:</span>
                                <span class="font-semibold text-green-600">8</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Apostas perdidas:</span>
                                <span class="font-semibold text-red-600">5</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Taxa de acerto:</span>
                                <span class="font-semibold text-blue-600">53%</span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Account Actions -->
                    <div class="bg-white rounded-lg shadow-md p-6 border-2 border-yellow-400">
                        <h3 class="text-lg font-semibold text-blue-900 mb-4">Ações da Conta</h3>
                        <div class="space-y-3">
                            <button class="w-full text-left text-gray-700 hover:text-blue-900 py-2 px-3 rounded-lg hover:bg-gray-100 transition-colors">
                                Alterar senha
                            </button>
                            <button class="w-full text-left text-gray-700 hover:text-blue-900 py-2 px-3 rounded-lg hover:bg-gray-100 transition-colors">
                                Histórico de transações
                            </button>
                            <button class="w-full text-left text-gray-700 hover:text-blue-900 py-2 px-3 rounded-lg hover:bg-gray-100 transition-colors">
                                Configurações de notificação
                            </button>
                            <button class="w-full text-left text-red-600 hover:text-red-800 py-2 px-3 rounded-lg hover:bg-red-50 transition-colors">
                                Sair da conta
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 